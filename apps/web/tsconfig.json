{
  "extends": "@dd/tsconfig/base.json",
  "compilerOptions": {
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ],
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "module": "ESNext",
    "isolatedModules": true
  },
  "include": [
    ".",
    "eslint.config.mjs",
    "index.d.ts",
    "next-env.d.ts",
    "next.config.mjs",
    "postcss.config.cjs",
    "tailwind.config.ts",
    "src/**/*.tsx",
    "src/**/*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "public/**/*.js"
  ]
}
